        "libs/mydailydigest/app/src/index.ts"
      ],
      "@cccsharonparish.org/mydailydigest/directives": [
        "libs/mydailydigest/directives/src/index.ts"
      ],
      "@cccsharonparish.org/mydailydigest/ui": [
        "libs/mydailydigest/ui/src/index.ts"
      ],
      "@cccsharonparish.org/mydailydigest/ui-stories": [
        "libs/mydailydigest/ui-stories/src/index.ts"
      ],
